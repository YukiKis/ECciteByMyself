<div class="col-md-6 col-md-offset-3">
<h3><span>会員の方はこちらからログイン</span></h3>

<%= render "layouts/error", resource: @customer %>

<%= form_with model: @customer, url: session_path(resource), local: true do |f| %>
  <div class="row">
    <div class="form-group">
      <div class="col-md-3 text-right">
        <%= f.label :email, "メールアドレス", class: "control-label" %>
      </div>
      <div class="col-md-9">
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-md-3 text-right">
        <%= f.label :password, "パスワード", class: "control-label" %>
      </div>
      <div class="col-md-9">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>
  </div>

  <%# <% if devise_mapping.rememberable? %>
    <%# <div class="field"> %>
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <%# </div> %>
  <%# end %>

  <p class="text-right"><%= link_to "=>パスワードを忘れた方はこちら", edit_customer_password_path, style: "color: blue;"%></p>

  <div class="row">
    <div class="col-md-12 text-center">
      <%= f.submit "ログイン", class: "btn btn-success" %>
    </div>
  </div>
  <% end %>

<div class="row">
  <div class="col-md-12">
    <h3><span>登録がお済みでない方</span></h3>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <p><%= link_to "こちら", new_customer_registration_path, style: "color: blue;" %>　から新規登録を行ってください</p>
      </div>
    </div>
  </div>
</div>


<%#= render "devise/shared/links" %>
</div>