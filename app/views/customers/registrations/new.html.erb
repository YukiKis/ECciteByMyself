<div class="col-md-12">
<h2><span>新規会員登録</span></h2>

<%= render "layouts/error", resource: @customer %>
<%= form_with model: @customer, url: customer_registration_path, id: "new_customer", class: "new_customer form-horizontal", local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :last_name, "名前" %>
    </div>
    <div class="col-md-10 form-inline" style="position: relative">
      <%= f.text_field :last_name, class: "form-control" %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :last_name_kana, "フリガナ", class: "control-label" %>
    </div>
    <div class="col-md-10 form-inline">
      <%= f.text_field :last_name_kana, class: "form-control" %>
      <%= f.text_field :first_name_kana, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :email, "メールアドレス", class: "control-label" %>
    </div>
    <div class="col-md-10 form-inline">
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "control-label registration-postcode-field" %>
    </div>
    <div class="col-md-10 form-inline">
      <%= f.text_field :postcode, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :address, "住所", class: "control-label" %>
    </div>
    <div class="col-md-10 form-inline">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :tel, "電話番号(ハイフンなし)", class: "control-label registration-tel-field"  %>
    </div>
    <div class="col-md-10 form-inline">
      <%= f.text_field :tel, class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :password, "パスワード(6文字以上)", class: "control-label" %>
    </div>
    <div class="col-md-10 form-inline">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "control-label" %>
    </div>
    <div class="col-md-10 form-inline">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions text-center">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<h3><span style="background-color: gray;">既に登録済みの方</span></h3>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>

<%= render "devise/shared/links" %>
</div>