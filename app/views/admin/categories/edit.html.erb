<% provide(:title, "ジャンル編集") %>
<div class="col-md-10 col-md-offset-1">
  <%= render "layouts/error", resource: @category %>
  <h3 class="category-new-title"><span>ジャンル編集</span></h3>

  <%= form_with model: @category, url: admin_category_path(@category), class: "form-inline", local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "ジャンル", class: "control-label" %>
      <%= f.text_field :name, class: "form-control category-name-field" %>
      <%= f.radio_button :is_active, true, class: "form-control" %>
      <%= f.label :is_active_true, "有効", class: "control-label"%>
      <%= f.radio_button :is_active, false, class: "form-control" %>
      <%= f.label :is_active_false, "無効", class: "control-label"%>
      <%= f.submit "変更を保存する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>