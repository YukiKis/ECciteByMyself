<% provide(:title, "商品編集") %>
<div class="col-md-10 col-md-offset-1">

  <%= render "layouts/error", resource: @item %>
  <h3><span>商品編集</span></h3>
  <div class="row">
  <%= form_with model: @item, url: admin_item_path(@item), local: true do |f| %>
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, fallback: "noimage.jpg", size: "250x200" %>
      <%= f.attachment_field :image, class: "btn", placeholder: "画像" %>
    </div>
    <div class="col-md-4 col-md-offset-2">
      <div class="form-group">
        <%= f.label :name, "商品名", class: "control-form" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description, "商品説明", class: "control-form" %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :category, class: "control-form" %>
          <%= f.select :category, Category.for_select, { selected: @item.category.name }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= f.label :price, "税抜価格", class: "control-form" %>
        <div class="input-group">
          <%= f.text_field :price, class: "form-control" %>
          <span class="input-group-addon">円</span>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :is_active, "販売ステータス", class: "control-form" %>
        <%= f.select :is_active, [[ "販売中", true ], [ "販売中止", false ]], { selected: @item.is_active }, { class: "form-control" } %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-right">
        <%= f.submit "変更を保存", class: "btn btn-primary btn-lg" %>
      </div>
    </div>

  <% end %>
  </div>
</div>