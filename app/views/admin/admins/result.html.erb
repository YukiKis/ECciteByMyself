<% provide(:title, "#{@heading}") %>
<div class="col-md-12">
  <h3 class="customer-index-title"><span><%= @heading %></span></h3>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table">
      <% unless @resources.nil? %>
        <% if @resources.first.class == Customer%>
          <%= render "admin/customers/customer", collection: @resources %>
        <% elsif @resources.first.class == Item %>
          <%= render "admin/items/item", collection: @resources%>
        <% end %>
      <% end %>
      </table>
    </div>
  </div>
</div>