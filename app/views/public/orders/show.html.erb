<div class="col-md-10">
  <h3><span style="background-color: gray;">注文履歴詳細</span></h3>
  <div class="row">
    <div class="col-md-7">
      <h4>注文情報</h4>
      <table class="table">
        <tr><th>注文日</th><th><%= @order.date_show %></th></tr>
        <tr><th>配送先</th><td><%= @order.deliver_show %></td></tr>
        <tr><th>支払方法</th><td><%= @order.how_to_pay %></td></tr>
        <tr><th>ステータス</th><td><%= @order.status %></td></tr>
      </table>
    </div>

    <div class="col-md-5">
      <h4>請求情報</h4>
      <table class="table">
        <tr><th>商品合計</th><td><%= @order.total_price %></td></tr>
        <tr><th>配送料<</th><td><%= @order.deliver_fee %></td></tr>
        <tr><th><b>ご請求額</b></th><td><%= @order.get_whole_total_price %></td></tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
    <h4>注文内容</h4>
      <table class="table">
        <thead>
          <tr><th>商品</th><th>単価（税込）</th><th>個数</th><th>小計</th></tr>
        </thead>
        <tbody>
          <%= render @order_items %>
        </tbody>
      </table>
    </div>
  </div>

</div>