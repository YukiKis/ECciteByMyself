<div class="col-md-12">
  <h3><span>配送先登録/一覧</span></h3>
  <%= form_with model: @delivery_new, local: true do |f| %>
    <div class="form-group">
    <%= f.label :postcode, "郵便番号(ハイフンなし)"%>
    <%= f.text_field :postcode%>
    </div>

    <div class="form-grouP">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address %>    
    </div>

    <div class="form-group">
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit "登録する", class: "btn btn-success" %>
  <% end %>

  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr><th>郵便番号</th><th>住所</th><th>宛名</th><th></th></tr>
        </thead>
        <tbody>
          <%= render @deliveries %>
        </tbody>
      </table>
    </div>
  </div>
</div>