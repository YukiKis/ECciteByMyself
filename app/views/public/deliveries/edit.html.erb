<div class="col-md-12">
  <%= render "layouts/error", resource: @delivery %>
  <h3><span style="background-color: gray;">配送先編集</span></h3>
  <%= form_with model: @delivery, local: true do |f| %>
    <div class="form-group">
      <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postcode%>
    </div>

    <div class="form-group">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address%>
    </div>

    <div class="form-group">
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name %>
    </div>

    <%= f.submit "編集する", class: "btn btn-primary text-right" %>
    
  <% end %>
</div>