<tr>
  <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 30, format: "jpg", fallback: "noimage-jpg", size: "50x30" %><%= cart_item.item.name %></td>
  <td><%= cart_item.price.to_s(:delimited) %></td>
  <td>
    <%= form_with model: cart_item, class: "form-inline", remote: true do |f| %>
      <%= f.hidden_field :item_id, value: cart_item.item.id %>
      <%= f.text_field :amount, id: "cart_item-#{cart_item.id}", class: "form-control", style: "width: 50px;" %>
      <%= f.submit "変更", class: "btn btn-primary", id: "cart_item-update-#{cart_item.id}", style: "width: 50px;" %>
    <% end %>
  </td>
  <td><%= cart_item.subtotal.to_s(:delimited) %></td>
  <td><%= link_to "削除する", cart_item_path(cart_item), class: "btn btn-danger", method: :delete, remote: true %></td>
</tr>