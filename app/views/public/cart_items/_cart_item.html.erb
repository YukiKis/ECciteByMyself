<tr>
  <td><%= attachment_image_tag cart_item.item, :image, :fill, 30, 50, format: "jpg", fallback: "noimage-jpg", size: "30x50" %>　<%= cart_item.item.name %></td>
  <td><%= cart_item.price_with_tax %></td>
  <td>
    <%= form_with model: cart_item, local: true do |f| %>
      <%= f.hidden_field :item_id, value: cart_item.item.id %>
      <%= f.number_field :amount %>
      <%= f.submit "変更", class: "btn btn-primary" %>
    <% end %>
  </td>
  <td><%= cart_item.subtotal %></td>
  <td><%= link_to "削除する", cart_item_path(cart_item), class: "btn btn-danger", method: :delete %></td>
</tr>